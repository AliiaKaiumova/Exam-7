<h1>Tests</h1>

<p class="mg-bottom-20">
  <%= link_to 'New test', new_test_path, class: 'btn btn-primary' %>
</p>

<table class="table table-hover col-sm-12">
  <thead>
  <tr>
    <th class="col-sm-4">Name</th>
    <th class="col-sm-2">Link</th>
    <th class="col-sm-2">Questions #</th>
    <th class="col-sm-2">Results #</th>
    <th class="col-sm-2">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td>link</td>
        <td><%= test.questions.count %></td>
        <td>results</td>
        <td>
          <%= link_to 'View, ', test_path(test) %>
          <%= link_to 'Edit, ', edit_test_path(test) %>
          <%= link_to 'Remove', test_path(test),
                      method: :delete,
                      data: {confirm: 'Are you sure you want to delete this test?'} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <%= will_paginate @tests %>
  </div>
</div>


