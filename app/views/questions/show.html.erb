<h1>Question:" <%= @question.content %>"</h1>

<h3>Add new answer:</h3>
<%= render 'answers/form' %>

<table class="table table-hover col-sm-12">
  <thead>
  <tr>
    <th class="col-sm-2">#</th>
    <th class="col-sm-4">Answer</th>
    <th class="col-sm-3">Is correct?</th>
    <th class="col-sm-3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.content %></td>
        <td><%= answer.status %></td>
        <td>
          <%= link_to 'View, ', test_question_path(@test, question) %>
          <%= link_to 'Edit, ', edit_test_question_path(@test, question) %>
          <%= link_to 'Remove', test_question_path(@test, question),
                      method: :delete,
                      data: {confirm: 'Are you sure you want to delete this question?'} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <%= will_paginate @answers %>
  </div>
</div>